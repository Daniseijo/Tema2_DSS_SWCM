<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.clase.schoollife"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="17" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        
        <activity
            android:name="com.clase.schoollife.SplashActivity"
            android:label="@string/app_name"
            android:theme="@style/StartTheme" android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.clase.schoollife.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="com.clase.schoollife.MAIN" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity android:name="com.clase.schoollife.CreateSubject" >
        </activity>
        <activity
            android:name="com.clase.schoollife.SubjectActivity"
            android:label="@string/title_activity_subject" >
        </activity>
        <activity
            android:name="com.clase.schoollife.TaskActivity"
            android:label="@string/title_activity_task" >
        </activity>
        <activity android:name="com.clase.schoollife.CreateTask" >
        </activity>
        <activity
            android:name="com.clase.schoollife.OptionsActivity"
            android:label="@string/title_activity_options" >
        </activity>
        <activity
            android:name="com.clase.schoollife.HelpActivity"
            android:label="@string/title_activity_help" >
        </activity>
    </application>

</manifest>